{
  "name": "gambos-dev",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "dev-env",
  "workspaceFolder": "/workspace/project/gambos-sw",
  "customizations": {
    "vscode": {
      "extensions": [
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-vscode.cmake-tools",
        "marus25.cortex-debug",
        "ms-vscode.hexeditor"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "[c]": {
          "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
        },
        "[cpp]": {
          "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
        },
        "C_Cpp.default.compileCommands": "${workspaceFolder}/project/build/Debug/compile_commands.json",
        "C_Cpp.intelliSenseEngine": "disabled",
        "C_Cpp.errorSquiggles": "disabled",
        "clangd.arguments": [
          "--background-index"
        ]
      }
    }
  },
  "postCreateCommand": "bash -c './.devcontainer/setup.sh'",
  "postStartCommand": "bash -c './.devcontainer/setup.sh --post-start'",
  "remoteUser": "developer"
}